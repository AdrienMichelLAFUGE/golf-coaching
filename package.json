{
  "name": "golf-coaching",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "jest --runInBand",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "predeploy": "npm run ci",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:staging:apply": "node scripts/db/apply-migration.js --env DATABASE_URL_STAGING",
    "db:prod:apply": "node scripts/db/apply-migration.js --env DATABASE_URL_PROD",
    "db:check:schema": "node scripts/db/check-migrations.js",
    "db:check:secrets": "node scripts/db/check-tracked-env.js",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@supabase/supabase-js": "^2.91.0",
    "next": "16.1.4",
    "openai": "^6.16.0",
    "pdf-parse": "^2.4.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "server-only": "0.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/jest": "^29.5.12",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.5.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.51.1",
    "prettier": "^3.3.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
